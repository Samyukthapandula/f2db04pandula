extends layout 
 
block content 
  h1= title 
 
  form(id='DogForm', action="/resource/dogs", method="POST") 
    div.form-group 
        label.dogAttr(for='Dog_age') Dog Age 
        input#Dog_age(type='number', name='Dog_age') 
    div.form-group 
        label.dogAttr(for='Dog_breed') Dog Breed 
        input#Dog_breed(type='text', name='Dog_breed') 
    div.form-group 
        label.dogAttr(for='Dog_speciality') Dog Speciality 
        input#Dog_speciality(type='text', name='Dog_speciality') 
    input(type="submit") 
 
  script. 
    document.forms['DogForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 